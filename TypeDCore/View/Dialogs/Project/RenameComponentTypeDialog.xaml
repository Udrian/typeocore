<Window x:Class="TypeDCore.View.Dialogs.Project.RenameComponentTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeDCore.View.Dialogs.Project"
        mc:Ignorable="d"
        Title="Rename component type" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding Name}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="_Cancel" Height="50" Click="CancelButton_Click"/>
        <Button Grid.Row="2" Grid.Column="2" Content="_Save" Height="50" Click="SaveButton_Click"/>
    </Grid>
</Window>
