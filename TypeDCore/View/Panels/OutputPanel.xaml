<UserControl x:Class="TypeDCore.View.Panels.OutputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypeDCore.View.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Unloaded="Panel_Unloaded">
    <Grid>
        <TextBox
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            Name="tbOutputText" TextChanged="tbOutputText_TextChanged" IsReadOnly="True" Text="{Binding OutputText}"/>
    </Grid>
</UserControl>
